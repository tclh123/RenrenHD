<Page
    x:Class="RenrenHD.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RenrenHD"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <Storyboard x:Name="storyboard_welcome">
            <DoubleAnimation
                Storyboard.TargetName="txtWelcome"
                Storyboard.TargetProperty="(Canvas.Top)"
                From="100.0" To="10.0"
                Duration="0:0:1"
                />
            <DoubleAnimation
                Storyboard.TargetName="stkButtons"
                Storyboard.TargetProperty="Opacity"
                From="0.0" To="1.0"
                Duration="0:0:1"
                />
            <DoubleAnimation
                Storyboard.TargetName="stkButtons"
                Storyboard.TargetProperty="(Canvas.Top)"
                From="100.0" To="150.0"
                Duration="0:0:1"
                />
        </Storyboard>
    </Page.Resources>
    
    <Grid Background="{StaticResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Canvas Grid.Row="1">
            <TextBlock x:Name="txtWelcome"
                       Canvas.Top="100.0"
                       Canvas.Left="450.0"
                       Text="Welcome to RenrenHD!"
                       FontWeight="Black"
                       FontSize="30"
                       />
            <StackPanel x:Name="stkButtons" 
                        Orientation="Horizontal"
                        Canvas.Top="100"
                        Canvas.Left="500"
                        Opacity="0.0"
                        >
                <Button Content="登陆" 
                        Margin="0,0,30,0"
                        Click="LoginHandler"
                        ></Button>
                <Button Content="注册"></Button>
            </StackPanel>
        </Canvas>
    </Grid>
    
</Page>
